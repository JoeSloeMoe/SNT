<configs>

	<!--when the Learn By Use Daring Adventurer Perk reaches max level, the player will be have access to the reset trader quests option
		when talking to a trader.
	-->
	<!--add the reset option to the traders, only show if lbu_showTraderQuests set to 1 in players config options 
		and lbu_traderQuestsEnabled (lbu_DaringAdventure is at max)
		See also buffs:buffLbuDaringAdv -->
	<append xpath="/dialogs/dialog[@id='trader']/statement[@id='start']">
		<response_entry id="reset" />
	</append>			
	<insertBefore xpath="/dialogs/dialog[@id='trader']/response[@id='jobshavenotallowed']">		
		<response id="reset" text="dialog_trader_response_resetquests" >
			<requirement type="QuestStatus" value="NotStarted" requirementtype="Hide" />
			<requirement type="CheckCVar" id="lbu_showTraderQuests" value="1" requirementtype="Hide" />
			<requirement type="CheckCVar" id="lbu_traderQuestsEnabled" value="1" requirementtype="Hide" />
			<action type="Trader" id="reset_quests" />
		</response>
	</insertBefore>		
			
</configs>