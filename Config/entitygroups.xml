 <configs>
 
	<append xpath="/entitygroups">
		<!-- Entity Group to add a very small chance for bears in environments -->
		<!-- NONE must not be the first entry since first name determines if enemy group -->
		<entitygroup name="EnemyBearChanged">
			animalBear, 1
			none, 99
		</entitygroup>
		<!-- Entity Group to add a very small chance for wolves in environments -->
		<!-- NONE must not be the first entry since first name determines if enemy group -->
		<entitygroup name="EnemyWolfChanged">
			animalDireWolf, 1
			none, 99
		</entitygroup>
	</append>
 </configs>