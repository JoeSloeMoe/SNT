 <configs>
 
	<append xpath="/gamestages">
		<!--interloper story code-->
		<!--spawns the supply crate for the interloper:quest_Interloper_InterceptTheSupplies chapter-->
		<spawner name="InterloperDropSpawner">
			<!--if only the first gamestage used, then it will cascade to all gamestages-->
			<gamestage stage="1">
				<spawn group="InterloperDrop" num="1" maxAlive="1" duration="1000"/>
			</gamestage>
		</spawner>
		<group name="InterloperDropSpawner" emptyChance="0" decoyChance="0" decoy1hpChance="0">
			<spawner name="InterloperDropSpawner" count="1"/>
		</group>
		
		<!--spawns the supply crate for the interloper:quest_InterloperEpilogueSpawn chapter-->
