<configs>
	<!--desert-->
	
	<remove xpath="worldgeneration/biomes/biome[@name='desert']/weather[@name='rainlight']"/>
	<remove xpath="worldgeneration/biomes/biome[@name='desert']/weather[@name='rainheavy']"/>
	<!--min and max for storm fog-->
	<insertAfter xpath ="worldgeneration/biomes/biome[@name='desert']/weather[@name='default']">
		<!-- it doesnt rain in the desert except for storms-->
		<weather name="rainlight" prob="2">
			<Temperature range="95,105"/>
			<CloudThickness range="55,75"/>
			<Precipitation range="1,5"/>
			<Fog range="1,1"/>
			<Wind range="10,15"/>
		</weather>
		<weather name="rainheavy" prob="0">
			<Temperature min="95" max="105" />
			<CloudThickness min="55" max="75" />
			<Precipitation min="1" max="2" />
			<Fog min="2" max="4" />
			<Wind min="15" max="25" />
		</weather>
	</insertAfter>
	
	
	<!--wasteland fog settings - to much work fiddling with indiviual properties so remove and replace whole weather elements-->
	<remove xpath ="worldgeneration/biomes/biome[@name='wasteland']/weather[@name='default']"/>
	<remove xpath ="worldgeneration/biomes/biome[@name='wasteland']/weather[@name='rainlight']"/>
	<remove xpath ="worldgeneration/biomes/biome[@name='wasteland']/weather[@name='rainheavy']"/>
	<insertBefore xpath ="worldgeneration/biomes/biome[@name='wasteland']/weather[@name='bloodMoon']">
		<weather name="default" prob="83" duration="5">
			<Temperature range="50,90"/>
			<CloudThickness range="0,0" prob="30"/>
			<CloudThickness range="10,70" prob="70"/>
			<Precipitation range="0,0"/>
			<Fog range="0,3"/>
			<Wind range="7,20"/>
		</weather>
		
		<weather name="rainlight" prob="10">
			<Temperature range="50,90"/>
			<CloudThickness range="55,75"/>
			<Precipitation range="20,50"/>
			<Fog range="0,3"/>
			<Wind range="1,3"/>
			<spectrum name="Rainy"/>
		</weather>			
		<weather name="rainheavy" prob="7">
			<Temperature range="50,90"/>
			<CloudThickness range="75,100"/>
			<Precipitation range="40,65"/>
			<Fog range="3,5"/>
			<Wind range="2,6"/>
			<spectrum name="Rainy"/>
		</weather>
	</insertBefore>
	
	<!--fog for snow biome-->
	<remove xpath ="worldgeneration/biomes/biome[@name='snow']/weather[@name='fog']"/>
	<remove xpath ="worldgeneration/biomes/biome[@name='snow']/weather[@name='snowlight']"/>
	<remove xpath ="worldgeneration/biomes/biome[@name='snow']/weather[@name='snowheavy']"/>
	<insertAfter xpath ="worldgeneration/biomes/biome[@name='snow']/weather[@name='default']">
		<weather name="fog" prob="8">
			<Temperature range="20,30"/>
			<CloudThickness range="35,60"/>
			<Precipitation range="0,0"/>
			<Fog range="3,8"/>
			<Wind range="4,6"/>
			<spectrum name="Snowy"/>
		</weather>
		<weather name="snowlight" prob="28">
			<Temperature range="18,28"/>
			<CloudThickness range="50,70"/>
			<Precipitation range="30,45"/>
			<Fog range="0,3"/>
			<Wind range="10,18"/>
			<spectrum name="Snowy"/>
		</weather>
		<weather name="snowheavy" prob="20">
			<Temperature range="15,25"/>
			<CloudThickness range="80,90"/>
			<Precipitation range="40,70"/>
			<Fog range="1,4"/>
			<Wind range="20,25"/>
			<spectrum name="Snowy"/>
		</weather>
	</insertAfter>

	<!-- burnt_forest fog-->
	<remove xpath ="worldgeneration/biomes/biome[@name='burnt_forest']/weather[@name='rainlight']"/>
	<remove xpath ="worldgeneration/biomes/biome[@name='burnt_forest']/weather[@name='rainheavy']"/>
	<insertAfter xpath ="worldgeneration/biomes/biome[@name='burnt_forest']/weather[@name='default']">
		<weather name="rainlight" prob="10">
			<Temperature range="75,85"/>
			<CloudThickness range="70,85"/>
			<Precipitation range="30,50"/>
			<Fog range="0,3"/>
			<Wind range="8,25"/>
			<spectrum name="Rainy"/>
		</weather>
		<weather name="rainheavy" prob="7">
			<Temperature range="75,85"/>
			<CloudThickness range="90,95"/>
			<Precipitation range="40,60"/>
			<Fog range="1,5"/>
			<Wind range="30,35"/>
			<spectrum name="Rainy"/>
		</weather>
	</insertAfter>
	
	<!--Pine Forest: general fog during storms and rain-->
	<remove xpath ="worldgeneration/biomes/biome[@name='pine_forest']/weather[@name='rainlight']"/>
	<remove xpath ="worldgeneration/biomes/biome[@name='pine_forest']/weather[@name='rainheavy']"/>
	<remove xpath="worldgeneration/biomes/biome[@name='pine_forest']/weather[@name='fog']"/>
	
	<insertAfter xpath ="worldgeneration/biomes/biome[@name='pine_forest']/weather[@name='default']">
		<!-- it doesnt fog in the forest outside of storms and rain-->
		<weather name="fog" prob="7">
			<Temperature range="65,70"/>
			<CloudThickness min="35" max="70"/>
			<Precipitation min="0" max="0"/>
			<Fog min="0" max="0"/>
			<Wind min="1" max="5"/>
		</weather>
		<weather name="rainlight" prob="6">
			<Temperature range="65,70"/>
			<CloudThickness range="50,70"/>
			<Precipitation range="30,40"/>
			<Fog range="0,3"/>
			<Wind range="10,25"/>
			<spectrum name="Rainy"/>
		</weather>
		<weather name="rainheavy" prob="4">
			<Temperature range="65,70"/>
			<CloudThickness range="50,70"/>
			<Precipitation range="40,50"/>
			<Fog range="1,4"/>
			<Wind range="20,30"/>
			<spectrum name="Rainy"/>
		</weather>
	</insertAfter>
	
</configs>